<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/cicular_1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-49dp"
        android:src="@drawable/circular_1" />

    <ImageView
        android:id="@+id/cicular_2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="-5dp"
        android:src="@drawable/circular_2" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:text="Sign up"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/cicular_2" />

    <EditText
        android:id="@+id/edt_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/login_title"
        android:layout_centerHorizontal="true"
        android:background="@color/input"
        android:hint="Name"
        android:paddingLeft="13dp" />

    <EditText
        android:id="@+id/edt_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/edt_name"
        android:layout_marginTop="10dp"
        android:paddingLeft="13dp"
        android:background="@color/input"
        android:hint="Email"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:paddingLeft="13dp"
        android:layout_below="@id/edt_email"
        android:background="@color/input"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/button"
        android:text="Sign Up"
        android:textColor="@color/text"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/txtLogIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Already signed up? Log in."
        android:layout_below="@id/btnSignUp"
        android:layout_marginTop="10dp"
        android:lineSpacingExtra="4sp"
        android:clickable="true"
        android:textStyle="italic"
        android:gravity="center_horizontal|center_vertical" />
</RelativeLayout>