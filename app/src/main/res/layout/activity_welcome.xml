<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/cicular_1"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="-49dp"
        android:src="@drawable/circular_1"
        app:tint="#DED8E1" />

    <ImageView
        android:id="@+id/cicular_2"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-6dp"
        android:layout_marginTop="-5dp"
        android:src="@drawable/circular_2"
        app:tint="#DED8E1"/>

    <ImageView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/welcome"
        android:layout_below="@id/cicular_2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp" />

    <TextView
        android:id="@+id/welcome_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:text="Welcome to JustMoveIn!"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/welcome"
        />

    <TextView
        android:id="@+id/welcome_detail"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:text="@string/placeholder"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_below="@id/welcome_words" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_detail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:backgroundTint="@color/button"
        android:text="Log in"
        android:textColor="@color/text"
        android:textSize="17dp" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/button"
        android:text="Sign up"
        android:textColor="@color/text"
        android:textSize="17dp" />


</RelativeLayout>